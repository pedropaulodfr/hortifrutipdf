            <h1>DADOS DO PRODUTO</h1>
        </div>
        <div id="modal-dados-produto-campos" class="modal-dados-produto-campos">
            <div class="modal-dados-produto-campos-lado">
                <div class="input-campo">
                    <h3>Nome</h3>
                    <input type="text" id="campo-nome" style="width: 250px;">
                </div>
                <div class="input-campo">
                    <h3>Categoria</h3>
                    <input type="text" id="campo-categoria">
                </div>
            </div>
            <div class="modal-dados-produto-campos-lado">
                <div class="input-campo">
                    <h3>Valor</h3>
                    <input type="text" id="campo-valor" style="width: 100px; margin-left: 33px;">
                </div>
                <div class="input-campo" style="margin-left: 173px;">
                    <h3>Unidade</h3>
                    <input type="text" id="campo-unidade" style="margin-left: 33px;">
                </div>
            </div>
            <div class="modal-dados-produto-campos-abaixo">
                <div class="input-campo">
                    <h3>Quantidade dispon√≠vel</h3>
