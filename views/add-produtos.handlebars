<link rel="stylesheet" href="/css/add-produtos.css">

<div id="modal-dados-produto-container" class="modal-dados-produto-container">
    <div id="modal-dados-produto" class="modal-dados-produto">
        <div id="modal-dados-produto-titulo" class="modal-dados-produto-titulo">
            <h1>DADOS DO PRODUTO</h1>
        </div>
        <div id="modal-dados-produto-campos" class="modal-dados-produto-campos">
            <div class="modal-dados-produto-campos-lado">
                <div class="input-campo">
                    <h3>Nome</h3>
                    <input type="text" id="campo-nome" style="width: 250px;">
                </div>
                <div class="input-campo">
                    <h3>Categoria</h3>
                    <select name="Categorias" id="campo-categoria" style="width: 190px;">
                        <option value="" selected>Categoria</option>
                        <option value="frutas">Frutas</option>
                        <option value="verduras">Verduras</option>
                        <option value="legumes">Legumes</option>
                    </select>
                </div>
            </div>
            <div class="modal-dados-produto-campos-lado">
                <div class="input-campo">
                    <h3>Valor</h3>
                    <input type="number" step="0.01" id="campo-valor" style="width: 100px; margin-left: 33px;">
                </div>
                <div class="input-campo" style="margin-left: 173px;">
                    <h3>Unidade</h3>
                    <input type="text" id="campo-unidade" style="margin-left: 33px;">
                </div>
            </div>
            <div class="modal-dados-produto-campos-abaixo">
                <div class="input-campo">
                    <h3>Quantidade dispon√≠vel</h3>
                    <input type="number" id="campo-quantidade-disponivel">
                </div>
                <div class="input-campo">
                    <h3>Nome da imagem</h3>
                    <input type="text" id="campo-nome-imagem" style="margin-left: 78px;">
                </div>
                <div class="input-campo">
                    <h3>Token</h3>
                    <input type="text" id="campo-token" style="width: 250px;">
                </div>
            </div>
            <div id="btn-confirmar-dados-produto">
                <input type="submit" id="" class="btn-comprar" value="Confirmar" onclick="verificarCamposDadosProdutos()">
            </div>
        </div>
    </div>
</div>

<script src="/js/add-produtos.js"></script>

