        position: relative;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(180deg, #008D60 0%, #569E75 100%);
    }
    .modal-dados-produto{
        display: inline;
        position: absolute;
        width: 60vw;
        height: 400px;
        background-color: #ffffff;
        border-radius: 15px;
    }
    .modal-dados-produto-titulo{
        text-align: center;
    }
    .modal-dados-produto-campos{
        position: absolute;
        top: 80px;
        left: 5%;
        display: inline;
    }
    .modal-dados-produto-campos-lado{
        display: flex;
    }
    .modal-dados-produto-campos-abaixo{
